<div>
  <h1><%= @recipe.name%></h1>
  <h3>By: <%=link_to "#{@recipe.user_name}", user_path(@recipe.user)%></h3>

  <h3>Instructions:</h3>
  <h4><%=@recipe.content%></h4>

  <h3>Ingredients</h3>

  <%@recipe.recipe_ingredients.each do |recipe_ingredient|%>
      <h3><%=recipe_ingredient.ingredient_name %>: <%=recipe_ingredient.quantity%></h3>
  <%end%>

  <% if @recipe.user == current_user%>
    <%= link_to "Edit Recipe", edit_user_recipe_path(current_user,@recipe), class: "btn" if @recipe.user == current_user%>
    <%= link_to "Delete Recipe", user_recipe_path(current_user, @recipe), method: :delete, class: "btn" if @recipe.user == current_user%>
  <%end%>
</div>

<h1>Comments</h1>
<div id = "commentsList">
  <% @recipe.comments.each do |comment| %>
    <h3> <%= comment.user_name %> Says: </h3>
    <h4> <%= comment.content %> </h4>
    <%if comment.user == current_user%>
      <%= link_to "Edit Comment", edit_user_comment_path(comment.user, comment), class: "btn"%>
      <%= link_to "Delete Comment", user_comment_path(comment.user,comment), method: :delete, class: "btn"%><br>
    <%end%>
  <%end%>
</div>

<div>
  <%if logged_in?%>
  <h3>Leave A Comment</h3>
    <%=render 'comments/comment'%>
  <%end%>
</div>

<script type="text/javascript" charset= "utf-8">
  $(document).ready(function(){
    $('#new_comment').on("submit",function(event){
      event.preventDefault();
      posted_comment = $(this).serialize();
      $.post('/comments',posted_comment).done(function(data){
        var commentUser = data["comment"]["user"]
        $('#commentsList').append('<h3> ' + commentUser["name"] + " Says: </h3>");
        $('#commentsList').append('<h4> ' + data["comment"]["content"] + " </h4>");
        $('#commentsList').append('<a href = "/users/' + commentUser["id"] +'/comments/'+ data["comment"]["id"]+'/edit" class = "btn">Edit Comment</a>');
        $('#commentsList').append('<a href = "/users/' + commentUser["id"] +'/comments/'+ data["comment"]["id"]+'" class = "btn" rel="nofollow" data-method="delete">Delete Comment</a>');
      }).fail(function(error){
        alert("Content must be filled in");
      });
    });
  });
</script>

