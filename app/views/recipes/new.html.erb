<h1>New Recipe</h1>
<%= form_for(@recipe) do |f|%>
  <%= f.label :name %> <br>
  <%= f.text_field :name%> <br>
  <%= f.label :content %> <br>
  <%= f.text_field :content%> <br>

  <%=f.fields_for(ingredients_attributes) do |i| %>
    <%=i.label "Ingredient" %> <br>
    <%=i.text_field :name %> <br>
    <%= i.label "Quantity"%> <br>
    <%= i.text_field :quantity%> <br>
  <%end%>

  <%=link_to "Add Ingredient", controller: :recipes, action: :add_ingredient, id: @recipe.id, ingredients_attributes: ingredients_attributes%><br>
  <%=f.submit "Save Recipe"%>
<% end%>